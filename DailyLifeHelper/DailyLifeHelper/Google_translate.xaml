<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyLifeHelper.Google_translate"
             Title="Google translate service">
    <StackLayout Orientation="Vertical">
        <Label Text="Please input your text to transalate"></Label>
        <Entry x:Name="sourcetext" Text="这是来自谷歌的翻译"></Entry>
        <Label Text="Your target language - en: english; zh-CN: Chinese (Simplified)"></Label>
        <Entry x:Name="language" Text="en"></Entry>
        <Button x:Name="transbtn"  Clicked="translateit"  Text ="Translate" ></Button>
        <Label x:Name="apistatus" Text="Below is translate result:"></Label>
        <Label x:Name="resultlabel" Text=""></Label>
        
        
    </StackLayout>
</ContentPage>